{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "out",
    "types": ["react", "jest", "@testing-library/jest-dom"],
    "lib": ["dom", "es5"],
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"]
}
