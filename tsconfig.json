// Modern code (to be polyfilled) and explicit ambient types.
{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "types": ["jest", "node"],
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/perf.js"]
}
