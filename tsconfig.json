// Modern code (to be polyfilled) and explicit ambient types.
{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "types": ["jest"],
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "useDefineForClassFields": true,
    "noUncheckedIndexedAccess": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
